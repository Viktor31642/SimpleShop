@model SimpleShop.Models.Order

@{
    ViewData["Title"] = "Delete order";
    var total = Model.Items?.Sum(i => i.Quantity * i.UnitPrice) ?? 0m;
}

<h1>Delete order</h1>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@total</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
