@model IEnumerable<SimpleShop.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Products</h1>
      
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text"
                           name="searchString"
                           value="@Context.Request.Query["searchString"]"
                           class="form-control"
                           placeholder="Search by name or category..." />
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-end">@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Stock)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">
                            @item.Name
                        </td>

                        <td class="text-end">
                            @item.Price.ToString("0.00")
                        </td>

                        <td>
                            <span class="badge bg-secondary">
                                @item.Category
                            </span>
                        </td>

                        <td class="text-center">
                            <span class="badge @(item.Stock > 0 ? "bg-success" : "bg-danger")">
                                @item.Stock
                            </span>
                        </td>

                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-1">

                                <form asp-controller="Cart"
                                      asp-action="Add"
                                      method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit"
                                            class="btn btn-sm btn-success">
                                        Add to cart
                                    </button>
                                </form>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
