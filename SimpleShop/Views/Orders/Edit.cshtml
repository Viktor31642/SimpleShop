@model SimpleShop.Models.OrderEditViewModel

@{
    ViewData["Title"] = "Edit order";
}

<h1>Edit order @Model.Id</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="OrderDate" class="form-label"></label>
        <input asp-for="OrderDate" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <h4>Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Unit price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Items[i].ProductName
                        <input type="hidden" asp-for="Items[@i].OrderItemId" />
                        <input type="hidden" asp-for="Items[@i].ProductName" />
                    </td>
                    <td>
                        <input asp-for="Items[@i].UnitPrice" class="form-control" />
                        <span asp-validation-for="Items[@i].UnitPrice" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="Items[@i].Quantity" class="form-control" />
                        <span asp-validation-for="Items[@i].Quantity" class="text-danger"></span>
                    </td>
                    <td>
                        @(Model.Items[i].UnitPrice * Model.Items[i].Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</form>
